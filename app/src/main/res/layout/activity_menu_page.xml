<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.akshay.myapplication.MenuPage">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_login"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="1">


            <!-- Programming Button -->

            <Button
                android:id="@+id/programming"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:foreground="@drawable/programming"

                android:layout_weight="0.22"
                />

            <Button
                android:id="@+id/notes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:foreground="@drawable/notes"
                android:background="@color/bg_login"
                android:layout_weight="0.22" />

            <Button
                android:id="@+id/videos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:foreground="@drawable/videos"

                android:layout_weight="0.22" />

            <Button
                android:id="@+id/forum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:foreground="@drawable/forum"

                android:layout_weight="0.22" />
        </LinearLayout>

    </LinearLayout>



   <!-- <include layout="@layout/content_menu_page" />
   -->

</android.support.design.widget.CoordinatorLayout>
